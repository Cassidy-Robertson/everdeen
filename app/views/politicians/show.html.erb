<div class="welcome_classic" id="welcome">
  <div class="welcome-classic__inner">
    <div class="container">
      <div class="row">
        <div class="col-xs-12">

          <!-- Heading -->
          <div class = "pad">
          </div>
          <div class = "pad">
          <img src="/assets/<%=@politician.bioguide_id%>.jpg" class="img-responsive col-xs-4 offset-4"/>
          <h1 class="heading heading_lg">
            <%= @politician.title %> <span class="text-primary"><%= @politician.first_name%> <%= @politician.last_name%></span>
          </h1>

          <!-- Sub heading -->
          <p class="heading__sub">
            Party: <%= @politician.party %><br>
            State: <%= @politician.state %><br>
            District: <%= @politician.district %>
          </p>
          </div>
        </div>
      </div> <!-- / .row -->
    </div> <!-- / .container -->
  </div> <!-- / .classic-welcome__inner -->
</div> <!-- / .welcome_classic -->

